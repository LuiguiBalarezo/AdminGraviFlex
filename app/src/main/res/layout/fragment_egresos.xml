<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    tools:context="com.scriptgo.www.admingraviflex.fragments.EgresosFragment">

    <TextView
        android:id="@+id/lbl_obra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="8dp"
        android:text="Obra"
        android:textColor="@color/blue_400"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spn_obras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lbl_obra"
        android:layout_alignLeft="@+id/lbl_obra"
        android:layout_alignRight="@+id/lbl_obra"
        android:layout_alignStart="@+id/lbl_obra"
        android:layout_below="@+id/lbl_obra"
        android:layout_marginTop="5dp"
        android:elevation="4dp" />

</RelativeLayout>
